"this file is C:\Users\Administrator\_vimrc
"that is $HOME\_vimrc
syntax enable
	if &t_Co > 2 || has("gui_running")
	  syntax on
	  set hlsearch
	endif

set nocompatible
"set encoding=utf-8
filetype on
filetype plugin on

":options
" since menu are Chinese:
"set encoding=cp936
"set encoding=gb18030
"set fileencodings=gb18030,ucs-bom,utf-8,utf-16,gbk
set backspace=indent,eol,start
set autoindent
set nobackup
set ruler
set showcmd
set showmode
set wrap
set sbr=........
set list
set listchars=tab:>-,trail:-,eol:$
set number
"set relativenumber
set numberwidth=4
set guifont=Anonymous_Pro:h24:cANSI
:colorscheme peachpuff
set expandtab
set smarttab
set tabstop=7
set softtabstop=4
set shiftwidth=4

"using a fixed folder for swap files
set dir=E:/temp_output/vim_swap_file





